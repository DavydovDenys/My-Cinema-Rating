<div class="center jumbotron">
  <div id='logo'>
    <h1>Welcome to My Cinema Rating</h1>
  </div>
  
  <% unless logged_in? %>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-warning" %>
    <p><h1>Already have an account</h1></p>
    <%= link_to "Log in", login_path, class: "btn btn-lg btn-success" %>
  <% else %>
    <h2>
      This is the home page for the
      <%= link_to 'My Cinema Rating', user_films_path(current_user), id: "logo" %>
    </h2>
  <% end %>
</div>
