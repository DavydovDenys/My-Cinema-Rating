<div class='container'><br>
  <%= form_with(model: @film, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: 'Title' %>
    </div>
    <div class="form-group"><br>
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
