<div class='card'>
  <div class='card-body' id='card-profile'>
    <div class='container'>
      <% provide(:title, @user.name) %>
        <div class="row">
          <aside class="col-md-4">
            <section class="user_info">
              <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
              </h1>
            </section>
          </aside>
        </div>
    </div>
  </div>
</div>

<%= render 'films/films', films: @user.films.paginate(page: params[:page], per_page: 8).order('id DESC')%>




