<div class='container'>
  <h1>Edit Comment</h1>

  <%= form_with model: @comment do |form| %>
    <div>
      <%= form.label :body %><br>
      <%= form.text_field :body, class: "form-control" %>
      <% @comment.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
    <br>
    <div>
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
